<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offline Vocal Remover &amp; Slicer"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите аудио, настройте пороги и запускайте обработку в фоне"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/selectFileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать аудио файл"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/selectedFileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Файл не выбран"
            android:textAlignment="center"
            android:padding="12dp"
            android:background="#F0F0F0"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FAFAFA"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Параметры тишины и сегментов"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Порог тишины (дБ)"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/thresholdInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:text="-35"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Минимальная длительность тишины (сек)"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/minSilenceInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="0.35"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Минимальная длительность сегмента (сек)"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/minSegmentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="1.0"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Запас (padding) сегмента (сек)"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/paddingInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="0.15" />
        </LinearLayout>

        <Button
            android:id="@+id/startProcessingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Запустить обработку"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/cancelProcessingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отменить обработку"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/progressPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/progressStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Готов к обработке"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/openZipButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Открыть ZIP"
                android:visibility="gone" />

            <View
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/shareZipButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Поделиться"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C62828"
            android:text=""
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/copyLogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Скопировать лог FFmpeg"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>
